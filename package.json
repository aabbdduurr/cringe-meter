{
  "name": "cringe-meter",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "server",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev:server": "pnpm --filter server dev",
    "dev:web": "pnpm --filter @cringe/web dev",
    "build:extension": "pnpm --filter @cringe/extension build",
    "typecheck": "pnpm -r run typecheck"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.4",
    "chrome-types": "^0.1.370",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "build": "^0.1.4",
    "pmpm": "^0.0.0",
    "pnpm": "^10.14.0",
    "zod": "^3"
  }
}
