{
  "manifest_version": 3,
  "name": "Cringe Meter for LinkedIn",
  "short_name": "Cringe Meter",
  "version": "0.1.0",
  "description": "Rates LinkedIn posts from 0â€“100 with a clear label and rewrite suggestions. Works with your own API key or your server.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
