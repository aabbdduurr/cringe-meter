{
  "name": "Cringe Meter for LinkedIn",
  "description": "Shows a cringe score overlay on LinkedIn posts.",
  "version": "0.3.0",
  "manifest_version": 3,
  "options_page": "options.html",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*",
    "http://localhost/*",
    "https://*.onrender.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "css": ["ui.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
